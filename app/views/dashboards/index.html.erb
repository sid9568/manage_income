<div class="flex-1 flex flex-col overflow-hidden">
<main class="flex-1 overflow-y-auto p-6 space-y-6" style="
    background: aliceblue;">
      
      <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-xl shadow hover:shadow-md transition">
          <h2 class="text-lg font-semibold text-gray-700 mb-2">Total Income</h2>
          <p class="text-2xl font-bold text-blue-600"><%=total_income%></p>
        </div>
        <div class="bg-white p-6 rounded-xl shadow hover:shadow-md transition">
          <h2 class="text-lg font-semibold text-gray-700 mb-2">Total Expenses</h2>
          <p class="text-2xl font-bold text-green-600"><%=total_expenses%></p>
        </div>
        <div class="bg-white p-6 rounded-xl shadow hover:shadow-md transition">
          <h2 class="text-lg font-semibold text-gray-700 mb-2">Net Balance</h2>
          <p class="text-2xl font-bold text-yellow-600"><%=net_income%></p>
        </div>
      </section>
      
      <h2 class="text-xl font-bold mb-4">Income Chart</h2>

   <%= column_chart @income_data, height: "300px", colors: ["#16a34a"] %>
    <h2 class="text-xl font-bold mb-4">Expense Chart</h2>
   <%= column_chart @expense_data, height: "300px", colors: ["#16a34a"] %>


      
    </main>
  </div>