  <%= form_with model: @transaction, local: true do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 bg-white p-6 rounded-xl shadow-md">
          <div>
          <%= f.label :title, "Transaction Title", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :title, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
        <%= f.label :amount, "Amount", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.number_field :amount,
              step: 0.01,
              min: 0.01,
              required: true,
              class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
          <%= f.label :category, "Category", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :category, ['Income', 'Expense'], {}, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" ,required: true%>
        </div>

        <div>
          <%= f.label :date, "Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :date, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div class="md:col-span-2">
          <%= f.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_area :description, rows: 3, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div class="md:col-span-2 flex justify-end">
          <%= f.submit "Add Transaction", class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md font-semibold transition" %>
        </div>
      </div>
<% end %>